    .chat
      .space
      = render @messages




    .bottom-content
      .left-bottom
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'moji', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'icon3' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          .right-bottom
            = f.submit 'Send', class: 'form__submit'
